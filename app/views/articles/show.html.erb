<h2 align="center">
  Title: <%= @article.title %>
</h2>

<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
<div class="article-actions">
  <%= link_to 'Edit Article', edit_article_path(@article), class: "btn btn-xs  btn-actions btn-actions-edit" %>
  <%= link_to 'Delete Article', article_path(@article), method: :delete,
              data: { confirm: "Are you sure you want to delete Article" },
              class: "btn btn-xs btn-actions btn-actions-delete" %>
  <%= link_to 'View All Articles', articles_path, class: "btn btn-xs btn-actions btn-actions-show" %>
</div>
</div>